{
  "manifest_version": 3,
  "name": "ChatSaver - Universal Chat Exporter",
  "version": "1.2.0",
  "description": "Save ChatGPT conversations in multiple formats (PDF, Markdown, Text, JSON) with full formatting and image preservation",
  "author": "ChatSaver Team",
  
  "permissions": [
    "downloads",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "lib/html2pdf.bundle.min.js",
        "content.js",
        "downloader.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "chatsaver@extension.com"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ]
    }
  ]
} 